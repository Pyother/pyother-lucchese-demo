<div x-data="{ activeTab: 'men' }" class="flex flex-col">
    <div class="flex flex-row p-[var(--spacing)]">
        <div class="flex flex-1 justify-start">
            <div x-on:click="activeTab = 'men'" :class="activeTab === 'men' 
                            ? 'text-[var(--color-link-hover)] md:flex items-center touch-target pr-4 pl-4 border-b-2 border-[var(--color-border)]' 
                            : 'md:flex items-center pr-4 pl-4 border-b-2 border-[var(--color-border)]'" class="hidden">
                MEN
            </div>
            <div x-on:click="activeTab = 'women'" :class="activeTab === 'women' 
                            ? 'text-[var(--color-link-hover)] md:flex items-center touch-target pr-4 pl-4 border-b-2 border-[var(--color-border)]' 
                            : 'md:flex items-center pr-4 pl-4 border-b-2 border-[var(--color-border)]'" class="hidden">
                WOMEN
            </div>
            <div class="flex md:hidden">
                <img src="/assets/icons/menu.svg" alt="Menu" class="w-1/2" />
